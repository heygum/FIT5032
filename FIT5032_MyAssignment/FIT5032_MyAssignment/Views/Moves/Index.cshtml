@model IEnumerable<FIT5032_MyAssignment.Models.Moves>


@{
    ViewBag.Title = "My Exercise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MoveName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Times)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rounds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MoveName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Times)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rounds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MoveID }) |
                @Html.ActionLink("Details", "Details", new { id = item.MoveID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MoveID })
            </td>
        </tr>
    }

</table>
